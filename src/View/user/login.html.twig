{% extends 'base.html.twig' %}
{% block body %}
    <h1>Login</h1>

    <form method="post">
        <div class="form-group">
            <label for="login_name">Nazwa użytkownika</label>
            <input type="text" class="form-control" name="login_name" placeholder="nazwa użytkownika">
        </div>

        <div class="form-group">
            <label for="login_password">Hasło</label>
            <input type="password" class="form-control" name="login_password" placeholder="Hasło">
        </div>

        <button type="submit" class="btn btn-default">Zaloguj</button>
    </form>

{% endblock %}